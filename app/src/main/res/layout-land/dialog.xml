<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="enter the max number of overs"
        android:id="@+id/textView"
        android:textColor="@color/textcolor"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/done"
        android:layout_alignEnd="@+id/done" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:digits="0123456789."
        android:inputType="number"

        android:ems="10"

        android:backgroundTint="#24acf5"
        android:textColor="@color/textcolor"
        android:id="@+id/minovers"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:background="@android:color/transparent"
        android:textColor="#24acf5"
        android:id="@+id/done"
android:onClick="done"
        android:layout_below="@+id/minovers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="168dp"
        android:layout_marginStart="168dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT APP"
        android:background="@android:color/transparent"
        android:textColor="#24acf5"
        android:onClick="exit"
        android:id="@+id/exit"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_below="@+id/minovers"
        android:layout_alignLeft="@+id/minovers"
        android:layout_alignStart="@+id/minovers" />

</RelativeLayout>